@using MvcSoruCevap.Models.Entity
@model List<TBLSORU>
@{
    ViewBag.Title = "Index2";
    Layout = "~/Views/Shared/_LayoutPanel.cshtml";
}
<h2>SORU SAYFAM</h2>
<script src="~/Scripts/jquery-3.4.1.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>
<link rel="stylesheet" href="/AdminLTE-3.0.4/plugins/fontawesome-free/css/all.min.css">
<br />
<table class="table table-bordered">
    <tr>
        <th>Soru Başlık</th>
        <th>Soru İçerik</th>
        <th>Eklenme Tarihi</th>
        <th>Düzenlenme Tarihi</th>
        <th>Sil</th>
        <th>Düzenle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <th>@item.BASLIK</th>
            <th>@item.ICERIK</th>
            <th>@item.EKLEMETARIHI</th>
            <th>@item.DUZENLEMETARIHI</th>
            <td>
                <a class="btn btn-info btn-sm" href="/SoruSor/SoruGuncelle/@item.ID">
                    <i class="fas fa-pencil-alt">
                    </i>
                    Düzenle
                </a>
            </td>
            <td>
                <a class="btn btn-danger btn-sm" href="/SoruSor/SoruSil/@item.ID">
                    <i class="fas fa-trash">
                    </i>
                    Sil
                </a>
            </td>
        </tr>
    }
</table>
<br />
<button class="btn btn-primary" data-toggle="modal" data-target="#Modal1"> Yeni Soru Ekle </button>
<div class="modal" id="Modal1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title"> Soru Sorma Paneli </h2>
            </div>
            <form method="post" action="/SoruSor/YeniSoru/">
                <div class="modal-body">
                    <label>Başlık</label>
                    <input type="text" name="BASLIK" class="form-control" />
                </div>
                <div class="modal-body">
                    <br />
                    <label>İçerik</label>
                    <input type="text" name="ICERIK" class="form-control" />
                </div>
                <div class="modal-body">
                    <br />
                    <label>Eklenme Tarihi</label>
                    <input type="text" name="EKLEMETARIHI" class="form-control" />
                </div>
                <div class="modal-body">
                    <br />
                    <label>Düzenlenme Tarihi</label>
                    <input type="text" name="DUZENLEMETARIHI" class="form-control" />
                    <br />
                    <button class="btn btn-info"> Kaydet </button>

                </div>
            </form>
        </div>
    </div>
</div>

